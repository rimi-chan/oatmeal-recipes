  </head>

<header>
  <div style="padding-top: 6rem">
    <div class="wrapper">
      <nav class="navbar navbar-dark fixed-top" style="background-color:#F4A460;">
        <div class = "navbar-brand">
          <%= link_to root_path, class: "navbar-item"  do  %>
            <h1 class = "mt-1 text-white" style="padding-left:50px; font-family: 'Alegreya Sans SC', sans-serif;" >Oatmeal.sweets</h1>
          <% end %>
        </div>
        <% if user_signed_in? %>
        <div>
        <div  style="padding-right:50px;">
        <button class="navbar-toggler m-2" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span>レシピつくる</span>
        </button>
        </div>
                
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active m-1">
              <p class="nav-link" href="#"><%= link_to 'オートミールレシピを投稿', new_oat_path, class:"text-muted" %></p>
            </li>
            <li class="nav-item active m-1">
              <p class="nav-link" href="#"><%= link_to 'オートフラワーレシピを投稿', new_powder_path, class:"link-secondary" %></p>
            </li>
          </ul>
        </div>
        <div style="padding-right:50px;">
        <button class="navbar-toggler m-2" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span>マイページ</span>
        </button>
        </div>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active m-1">
              <p class="nav-link" href="#"><%= link_to "マイページ", "/users/#{current_user.id}",class:"link-secondary"  %></p>
            </li>
            <li class="nav-item active m-1">
              <p class="nav-link" href="#"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete,  class:"btn btn-light text-secondary" %></p>
            </li>
          </ul>
        </div>
        </div>
        <% else %>
        <div class="m-2">
          <%= link_to "登録", new_user_registration_path,  class:"btn btn-light text-secondary"%>
          <%= link_to "ログイン", new_user_session_path,  class:"btn btn-light text-secondary" %>
        </div>  
        <% end %>
        </nav>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
