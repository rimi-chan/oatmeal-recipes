<article>
  <div id="carouselExampleInterval" class="carousel slide" style="margin-top:-12px;" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="2000">
      <img src="/assets/cake.jpeg"  style="opacity: 0.5;" class="d-block w-100" alt="オーバーナイトの写真">
    </div>
    <div class="carousel-item" data-bs-interval="2000">
      <img src="/assets/pan.jpeg"  style="opacity: 0.5;" class="d-block w-100" alt="オーバーナイトの写真">
    </div>
    <div class="carousel-item" data-bs-interval="2000">
       <img src="/assets/cake.jpeg"  style="opacity: 0.5;" class="d-block w-100" alt="オーバーナイトの写真">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
  </div>
  <div class="article-card text-center border rounded-3 border-warning" >
    <p>
      <h3  class="m-5" style="font-size:35px; font-family: 'Londrina Shadow', cursive;" >&nbsp;&nbsp;&nbsp;&nbsp;Let's&nbsp;&nbsp;make&nbsp;&nbsp;delicious&nbsp;&nbsp;sweets&nbsp;&nbsp;with&nbsp;&nbsp;oatmeal&nbsp;&nbsp;!!&nbsp;&nbsp;&nbsp;&nbsp;</h3>
    </p>
    <div class="search_form" style="padding-right:10px;">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-light" %>
      <% end %>
    </div>
  </div>
</article>

